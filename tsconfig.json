{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["./components"],
      "@pages/*": ["./pages"],
      "@lib/*": ["./lib"],
      "@stores/*": ["./stores"],
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"]
}
